@model StormEkspress.Models.UIModel.HomePageDto
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Kurye Başvuru Formu";
    var breadcrumbJson = ViewData["BreadcrumbJson"] as string;
    var pageTitle = ViewData["Title"] as string;
    var breadcrumbs = ViewData["Breadcrumbs"] as List<Breadcrumb>;
}

<div class="container-fluid page-header py-5" style="margin-bottom: 6rem;">
    <div class="container py-5">
        <h1 class="display-3 text-white mb-3 animated slideInDown">@ViewData["PageTitle"]</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb">
                @foreach (var breadcrumb in breadcrumbs)
                {
                    @if (breadcrumb.IsActive)
                    {
                        <li class="breadcrumb-item active" aria-current="page">@breadcrumb.Text</li>
                    }
                    else
                    {
                        <li class="breadcrumb-item"><a href="@breadcrumb.Url">@breadcrumb.Text</a></li>
                    }
                }
            </ol>
        </nav>
    </div>
</div>

<div class="container">
    <h1>Kurye Başvuru Formu</h1>
    <form method="post" asp-action="KuryeBasvuruFormu">
        <div class="form-group">
            <label asp-for="CourierApplicationForm.Name"></label>
            <input asp-for="CourierApplicationForm.Name" class="form-control" />
            <span asp-validation-for="CourierApplicationForm.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CourierApplicationForm.Email"></label>
            <input asp-for="CourierApplicationForm.Email" class="form-control" />
            <span asp-validation-for="CourierApplicationForm.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CourierApplicationForm.Phone"></label>
            <input asp-for="CourierApplicationForm.Phone" class="form-control" />
            <span asp-validation-for="CourierApplicationForm.Phone" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Gönder</button>
    </form>
</div>
