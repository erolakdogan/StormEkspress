@model StormEkspress.Models.UIModel.HomePageDto
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var service = Model.ServiceDetail;
    var breadcrumbJson = ViewData["BreadcrumbJson"] as string;
    var pageTitle = ViewData["Title"] as string;
    var breadcrumbs = ViewData["Breadcrumbs"] as List<Breadcrumb>;
}

<div class="container-fluid page-header py-5" style="margin-bottom: 6rem;">
    <div class="container py-5">
        <h1 class="display-3 text-white mb-3 animated slideInDown">@ViewData["PageTitle"]</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb">
                @foreach (var breadcrumb in breadcrumbs)
                {
                    @if (breadcrumb.IsActive)
                    {
                        <li class="breadcrumb-item text-white active" aria-current="page">@breadcrumb.Text</li>
                    }
                    else
                    {
                        <li class="breadcrumb-item text-white"><a href="@breadcrumb.Url">@breadcrumb.Text</a></li>
                    }
                }
            </ol>
        </nav>
    </div>
</div>

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="service-detail">
                <h1>@service.Name</h1>
                <img src="@service.ImageUrl" alt="@service.Name" class="img-fluid">
                <p>@service.LongDescription</p>

                <!-- SEO Uyumlu Başlık ve Meta Etiketler -->
                <meta name="description" content="@service.Description" />
                <meta name="keywords" content="@service.Name, Hizmet, Kurye" />
            </div>
        </div>
    </div>
</div>