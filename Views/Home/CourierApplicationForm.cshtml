@model StormEkspress.Models.UIModel.HomePageDto
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Kurye Başvuru Formu";
    var sitesetting = Model.SiteSettings;
    var breadcrumbJson = ViewData["BreadcrumbJson"] as string;
    var pageTitle = ViewData["Title"] as string;
    var breadcrumbs = ViewData["Breadcrumbs"] as List<Breadcrumb>;
}

<div class="container-fluid page-header py-5" style="margin-bottom: 6rem;">
    <div class="container py-5">
        <h1 class="display-3 text-white mb-3 animated slideInDown">@ViewData["PageTitle"]</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb">
                @foreach (var breadcrumb in breadcrumbs)
                {
                    @if (breadcrumb.IsActive)
                    {
                        <li class="breadcrumb-item active" aria-current="page">@breadcrumb.Text</li>
                    }
                    else
                    {
                        <li class="breadcrumb-item"><a href="@breadcrumb.Url">@breadcrumb.Text</a></li>
                    }
                }
            </ol>
        </nav>
    </div>
</div>

<div class="container py-3 py-md-5">
    <div class="row">
        <div class="col-12 col-lg-8 offset-lg-2">
            <!-- Başlık ve Resim -->
            <div class="text-center mb-4 mb-md-5">
                <h1 class="display-5 display-md-4 mb-3 mb-md-4">Kurye Başvuru Formu</h1>
                <img src="@Model.SiteSettings.ApplicationFormImageUrl"
                     alt="Kurye Başvuru Resmi"
                     class="img-fluid rounded shadow-lg"
                     style="max-width: 100%; height: auto;">
            </div>

            <!-- Form -->
            <div class="bg-light p-3 p-md-4 rounded shadow">
                <form method="post" asp-action="KuryeBasvuruFormu">
                    <!-- Ad Soyad -->
                    <div class="form-group mb-3 mb-md-4">
                        <label class="fw-bold">Adı Soyadı *</label>
                        <input asp-for="CourierApplicationForm.Name"
                               class="form-control form-control-md form-control-lg-md"
                               placeholder="Adınızı ve soyadınızı girin">
                        <span asp-validation-for="CourierApplicationForm.Name" class="text-danger small"></span>
                    </div>

                    <!-- Telefon -->
                    <div class="form-group mb-3 mb-md-4">
                        <label class="fw-bold">Telefon Numarası *</label>
                        <input asp-for="CourierApplicationForm.Phone"
                               class="form-control form-control-md form-control-lg-md"
                               placeholder="5xxxxxxxxx">
                        <span asp-validation-for="CourierApplicationForm.Phone" class="text-danger small"></span>
                    </div>

                    <!-- E-posta -->
                    <div class="form-group mb-3 mb-md-4">
                        <label class="fw-bold">E-posta</label>
                        <input asp-for="CourierApplicationForm.Email"
                               class="form-control form-control-md form-control-lg-md"
                               placeholder="ornek@email.com">
                        <span asp-validation-for="CourierApplicationForm.Email" class="text-danger small"></span>
                    </div>

                    <!-- Motorsiklet Marka/Model -->
                    <div class="form-group mb-3 mb-md-4">
                        <label class="fw-bold">Motorsiklet Marka/Model</label>
                        <input asp-for="CourierApplicationForm.Brand"
                               class="form-control form-control-md form-control-lg-md"
                               placeholder="Örn: Honda PCX">
                    </div>

                    <!-- Yaş -->
                    <div class="form-group mb-3 mb-md-4">
                        <label class="fw-bold">Yaş</label>
                        <input asp-for="CourierApplicationForm.Age"
                               class="form-control form-control-md form-control-lg-md"
                               placeholder="18-60 arası">
                    </div>

                    <!-- Sabıka Kaydı  -->
                    <div class="form-group mb-3 mb-md-4">
                        <label class="fw-bold">Sabika Kaydi</label>
                        <input asp-for="CourierApplicationForm.RapSheet"
                               class="form-control form-control-md form-control-lg-md"
                               placeholder="Örn: Evet / Hayır">
                    </div>

                    <!-- Adres -->
                    <div class="form-group mb-3 mb-md-4">
                        <label class="fw-bold">Adres *</label>
                        <input asp-for="CourierApplicationForm.Adress"
                               class="form-control form-control-md form-control-lg-md"
                               placeholder="Tam adresinizi girin">
                        <span asp-validation-for="CourierApplicationForm.Adress" class="text-danger small"></span>
                    </div>

                    <!-- Özgeçmiş -->
                    <div class="form-group mb-3 mb-md-4">
                        <label class="fw-bold">Özgeçmiş</label>
                        <textarea asp-for="CourierApplicationForm.Resume"
                                  class="form-control form-control-md form-control-lg-md"
                                  rows="3"
                                  placeholder="Kısa özgeçmişinizi yazın"></textarea>
                    </div>

                    <!-- Gönder Butonu -->
                    <div class="form-group mt-4 mt-md-5">
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-md btn-lg-md px-3 px-md-5">
                                <i class="fas fa-paper-plane me-2"></i> Gönder
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}