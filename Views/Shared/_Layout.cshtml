@model StormEkspress.Models.UIModel.HomePageDto
@{
    var breadcrumbJson = ViewData["BreadcrumbJson"] as string;
    var pageTitle = ViewData["Title"] as string;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@pageTitle</title>
    <!-- JSON-LD Breadcrumbs -->
    @if (!string.IsNullOrEmpty(breadcrumbJson))
    {
        <script type="application/ld+json">
            @Html.Raw(breadcrumbJson)
        </script>
    }
    <meta name="description" content="@ViewData["Description"]" />
    <meta name="keywords" content="@string.Join(", ", Model.SiteSettings.Keywords)">
    <meta name="robots" content="index, follow">
    <meta name="author" content="Storm Ekspress">
    <meta name="google-site-verification" content="ZwrDuSTn40chP7F4xo0ZeWa6gHs-IM6dRJH9L7Air4I" />
    <link href="assets/img/logo.webp" rel="icon" type="image/webp">
    <!-- Open Graph Meta Tags -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="@ViewData["OGUrl"]" />
    <meta property="og:image" content="@ViewData["OGImage"]" />
    <meta property="og:title" content="@ViewData["Title"]" />
    <meta property="og:description" content="@ViewData["Description"]" />
    <!-- Twitter Meta Tags (optional) -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="@ViewData["Title"]" />
    <meta name="twitter:description" content="@ViewData["Description"]" />
    <meta name="twitter:image" content="@ViewData["OGImage"]" />

    <!-- Preconnect Google Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>

    <!-- Load Google Fonts with `swap` for better performance -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Roboto:wght@500;700&display=swap" rel="stylesheet">

    <!-- Preload Critical CSS Files -->
    <link rel="preload" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.0/css/bootstrap.min.css" as="style">
    <link rel="preload" href="~/assets/css/bootstrap.min.css" as="style">
    <link rel="preload" href="~/assets/css/style.css" as="style">

    <!-- Load Preloaded CSS Files -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/css/style.css" rel="stylesheet">

    <!-- Preload Non-Critical CSS Files (if needed) -->
    <link rel="preload" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0-10/css/all.min.css" as="style">
    <link rel="preload" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" as="style">
    <link rel="preload" href="https://cdn.jsdelivr.net/npm/animate.css@3.5.2/animate.min.css" as="style">
    <link rel="preload" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.2.1/assets/owl.carousel.min.css" as="style">
    <link rel="preload" href="https://cdn.jsdelivr.net/npm/swiper@11.1.9/swiper.min.css" as="style">

    <!-- Load Non-Critical CSS Files -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0-10/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/animate.css@3.5.2/animate.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.2.1/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/swiper@11.1.9/swiper.min.css" rel="stylesheet">

</head>
<body>
    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg bg-white navbar-light shadow border-top border-5 border-primary sticky-top p-0">
        <a href="@Url.Action("Index", "Home")" class="navbar-brand bg-primary d-flex align-items-center px-4 px-lg-5">
            <img src="~/assets/img/logo.webp" alt="Logo" class="mb-2" style="max-height: 80px; object-fit: contain;">
        </a>
        <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-label="Mobil için Ana menüyü aç veya kapa">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto p-4 p-lg-0">
                @foreach (var item in Model.Menu)
                {
                    var currentPathNormalized = Model.CurrentPath.TrimEnd('/');
                    var itemUrlNormalized = item.Url.TrimEnd('/');

                    if (item.SubMenu != null && item.SubMenu.Any())
                    {
                        <div class="nav-item dropdown">
                            <a href="@item.Url" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                @item.Title
                            </a>
                            <div class="dropdown-menu fade-up m-0">
                                @foreach (var subItem in item.SubMenu)
                                {
                                    var subItemUrlNormalized = subItem.Url.TrimEnd('/');
                                    <a href="@subItem.Url" class="dropdown-item @(currentPathNormalized.Equals(subItemUrlNormalized, StringComparison.OrdinalIgnoreCase) ? "active" : "")">
                                        @subItem.Title
                                    </a>
                                }
                            </div>
                        </div>
                    }
                    else if (item.Title != "Hizmetlerimiz")
                    {
                        <a href="@item.Url" class="nav-item nav-link @(currentPathNormalized.Equals(itemUrlNormalized, StringComparison.OrdinalIgnoreCase) ? "active" : "")">
                            @item.Title
                        </a>
                    }
                }
            </div>
            <h4 class="m-0 pe-lg-5 d-none d-lg-block">
                <a href="tel:05434267789" style=" color: #060315 !important">
                    <i class="fa fa-headphones text-primary me-3"></i>+90 543 426 7789
                </a>
            </h4>

        </div>
    </nav>
    <main>
        @RenderBody()
    </main>
    <div class="footer-fixed-contact">
        <a class="footer-fixed-contact-left" href="tel:05434267789">
            <i class="fa-solid fa-phone"></i>
            Bizi Arayın
        </a>
        <a class="footer-fixed-contact-right" href="https://wa.me/905434267789" style="color: #ffffff; background-color: #007b5e;">
            <i class="fab fa-whatsapp"></i>
            WhatsApp
        </a>
    </div>
    <!-- Footer Start -->
    <div class="container-fluid bg-dark text-light footer pt-5 wow fadeIn" data-wow-delay="0.1s" style="margin-top: 6rem;">
        <div class="container py-5">
            <div class="row g-5">
                <div class="col-lg-3 col-md-6">
                    <h4 class="text-light mb-4">Adres</h4>
                    <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>Betim 1 İş Merkezi 12/A, Karabük, Türkiye,</p>
                    <a href="tel:05434267789" class="mb-2"><i class="fa fa-phone-alt me-3"></i>+90 543 426 7789</a>
                    <p class="mb-2"><i class="fa fa-envelope me-3"></i>info@stormekspress.com</p>
                    <div class="d-flex pt-2">
                        <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-twitter"></i></a>
                        <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-facebook-f"></i></a>
                        <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-youtube"></i></a>
                        <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h4 class="text-light mb-4">Hizmetlerimiz</h4>
                    @foreach (var item in Model.Services)
                    {
                        <a class="btn btn-link" href="/hizmetlerimiz/@item.Slug">@item.Name</a>
                    }
                </div>
                <div class="col-lg-3 col-md-6">
                    <h4 class="text-light mb-4">Hızlı Linkler</h4>
                    <a class="btn btn-link" href="">Anasayfa</a>
                    <a class="btn btn-link" href="@Url.Action("about")">Hakkımızda</a>
                    <a class="btn btn-link" href="@Url.Action("courierApplicationForm")">Kurye Başvuru</a>
                    <a class="btn btn-link" href="@Url.Action("restaurantApplicationForm")">Restoran Başvuru</a>
                    <a class="btn btn-link" href="@Url.Action("services")">Hizmetlerimiz</a>
                    <a class="btn btn-link" href="@Url.Action("contact")">İletişim</a>
                </div>
                <div class="col-lg-3 col-md-6">
                </div>
            </div>
        </div>
        <div class="container">
            <div class="copyright">
                <div class="row">
                    <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                        &copy; <a class="border-bottom" href="#">Storm Ekspress</a>, Tüm hakları saklıdır.
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square scroll-top"><i class="bi bi-arrow-up"></i></a>
    <!-- JavaScript Dosyalarını Optimize Etme -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery.easing@1.4.1/jquery.easing.min.js" defer></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/waypoints/4.0.1/jquery.waypoints.min.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery.counterup@2.1.0/jquery.counterup.min.js" defer></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.2.1/owl.carousel.min.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11.1.9/swiper.min.js" defer></script>
    <script src="~/assets/lib/wow/wow.min.js" defer></script>
    <script src="~/assets/js/main.js" defer></script>

    @RenderSection("Scripts", required: false) <!-- Burada Scripts section'ı render edilmesi sağlanır -->
</body>
</html>