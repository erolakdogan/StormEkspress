@model StormEkspress.Models.UIModel.HomePageDto
@{
    var breadcrumbJson = ViewData["BreadcrumbJson"] as string;
    var pageTitle = ViewData["Title"] as string;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@pageTitle</title>
    <!-- JSON-LD Breadcrumbs -->
    @if (!string.IsNullOrEmpty(breadcrumbJson))
    {
        <script type="application/ld+json">
            @Html.Raw(breadcrumbJson)
        </script>
    }
    <meta name="description" content="@ViewData["Description"]" />
    <meta name="keywords" content="@string.Join(", ", Model.Keywords)">
    <meta name="robots" content="index, follow">
    <meta name="author" content="Storm Ekspress">
    <meta name="google-site-verification" content="ZwrDuSTn40chP7F4xo0ZeWa6gHs-IM6dRJH9L7Air4I" />
    <link href="assets/img/logo.webp" rel="icon" type="image/webp">
    <!-- Open Graph Meta Tags -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="@ViewData["OGUrl"]" />
    <meta property="og:image" content="@ViewData["OGImage"]" />
    <meta property="og:title" content="@ViewData["Title"]" />
    <meta property="og:description" content="@ViewData["Description"]" />
    <!-- Twitter Meta Tags (optional) -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="@ViewData["Title"]" />
    <meta name="twitter:description" content="@ViewData["Description"]" />
    <meta name="twitter:image" content="@ViewData["OGImage"]" />

    <!-- Font Optimizasyon -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Roboto:wght@500;700&display=swap"
          rel="stylesheet"
          media="print"
          onload="this.media='all'; this.onload=null">
    <noscript>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Roboto:wght@500;700&display=swap" rel="stylesheet">
    </noscript>

    <!-- Kritik CSS (Inline) -->
    <style>
        :root {
            --bs-breakpoint-xs: 0;
            --bs-breakpoint-sm: 576px;
        }

        .container, .row {
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            line-height: 1.5;
            margin: 0;
        }

        h1, h2 {
            font-family: 'Roboto', sans-serif;
            margin: 0.5em 0;
        }

        .owl-carousel-item img {
            width: 100%;
            height: auto;
            aspect-ratio: 16/9;
        }
    </style>

    <!-- CSS Yükleme Mekanizması -->
    <link rel="preload" href="/assets/css/bootstrap.min.css" as="style" onload="this.rel='stylesheet'">
    <link rel="preload" href="/assets/css/style.css" as="style" onload="this.rel='stylesheet'">
    <noscript>
        <link href="/assets/css/bootstrap.min.css" rel="stylesheet">
        <link href="/assets/css/style.css" rel="stylesheet">
    </noscript>
    <!-- Kritik Olmayan CSS -->
    <link rel="preload" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0-10/css/all.min.css" as="style" onload="this.rel='stylesheet'">
    <link rel="preload" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" as="style" onload="this.rel='stylesheet'">
    <link rel="preload" href="https://cdn.jsdelivr.net/npm/animate.css@3.5.2/animate.min.css" as="style" onload="this.rel='stylesheet'">
    <link rel="preload" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.2.1/assets/owl.carousel.min.css" as="style" onload="this.media='all', this.rel='stylesheet'">
    <link rel="preload" href="https://cdn.jsdelivr.net/npm/swiper@11.1.9/swiper.min.css" as="style" onload="this.rel='stylesheet'">

    <!-- DNS Prefetch & Preconnect İpuçları -->
    <link rel="dns-prefetch" href="https://code.jquery.com">
    <link rel="preconnect" href="https://code.jquery.com" crossorigin>
    <link rel="dns-prefetch" href="https://cdn.jsdelivr.net">
    <link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin>
    <link rel="dns-prefetch" href="https://cdnjs.cloudflare.com">
    <link rel="preconnect" href="https://cdnjs.cloudflare.com" crossorigin>

    @RenderSection("HeadContent", required: false)
</head>
<body>
    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg bg-white navbar-light shadow border-top border-5 border-primary sticky-top p-0">
        <a href="@Url.Action("Index", "Home")" class="navbar-brand bg-primary d-flex align-items-center px-4 px-lg-5">
            <img src="~/assets/img/logo.webp" alt="Logo" width="150" height="80" class="mb-2" style="max-height: 80px; object-fit: contain;">
        </a>
        <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-label="Mobil için Ana menüyü aç veya kapa">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto p-4 p-lg-0">
                @foreach (var item in Model.Menu)
                {
                    var currentPathNormalized = Model.CurrentPath.TrimEnd('/');
                    var itemUrlNormalized = item.Url.TrimEnd('/');

                    if (item.SubMenu != null && item.SubMenu.Any())
                    {
                        <div class="nav-item dropdown">
                            <a href="@item.Url" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                @item.Title
                            </a>
                            <div class="dropdown-menu fade-up m-0">
                                @foreach (var subItem in item.SubMenu)
                                {
                                    var subItemUrlNormalized = subItem.Url.TrimEnd('/');
                                    <a href="@subItem.Url" class="dropdown-item @(currentPathNormalized.Equals(subItemUrlNormalized, StringComparison.OrdinalIgnoreCase) ? "active" : "")">
                                        @subItem.Title
                                    </a>
                                }
                            </div>
                        </div>
                    }
                    else if (item.Title != "Hizmetlerimiz")
                    {
                        <a href="@item.Url" class="nav-item nav-link @(currentPathNormalized.Equals(itemUrlNormalized, StringComparison.OrdinalIgnoreCase) ? "active" : "")">
                            @item.Title
                        </a>
                    }
                }
            </div>
            <h4 class="m-0 pe-lg-5 d-none d-lg-block">
                <a href="tel:@Model.ContactInfo.Phone" style=" color: #060315 !important">
                    <i class="fa fa-headphones text-primary me-3"></i>@Model.ContactInfo.Phone
                </a>
            </h4>

        </div>
    </nav>
    <div id="lazy-trigger" style="position:absolute; bottom:100px; height:1px;"></div>
    @RenderBody()
    <div class="footer-fixed-contact">
        <a class="footer-fixed-contact-left" href="tel:@Model.ContactInfo.Phone">
            <i class="fa-solid fa-phone"></i>
            Bizi Arayın
        </a>
        <a class="footer-fixed-contact-right" href="https://wa.me/905434267789" style="color: #ffffff; background-color: #007b5e;">
            <i class="fab fa-whatsapp"></i>
            WhatsApp
        </a>
    </div>
    <!-- Footer Start -->
    <div class="container-fluid bg-dark text-light footer pt-5 wow fadeIn" data-wow-delay="0.1s" style="margin-top: 6rem;">
        <div class="container py-5">
            <div class="row g-5">
                <div class="col-lg-3 col-md-6">
                    <h4 class="text-light mb-4">Adres</h4>
                    <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>@Model.ContactInfo.Address</p>
                    <a href="tel:@Model.ContactInfo.Phone" class="mb-2"><i class="fa fa-phone-alt me-3"></i>@Model.ContactInfo.Phone</a>
                    <p class="mb-2"><i class="fa fa-envelope me-3"></i>@Model.ContactInfo.Email</p>
                    <div class="d-flex pt-2">
                        <a class="btn btn-outline-light btn-social" target="_blank" href="@Model.ContactInfo.SocialLinks.Instagram"><i class="fab fa-instagram"></i></a>
                        <a class="btn btn-outline-light btn-social" target="_blank" href="@Model.ContactInfo.SocialLinks.Facebook"><i class="fab fa-facebook-f"></i></a>
                        <a class="btn btn-outline-light btn-social" target="_blank" href="@Model.ContactInfo.SocialLinks.Whatsapp"><i class="fab fa-whatsapp"></i></a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h4 class="text-light mb-4">Hizmetlerimiz</h4>
                    @foreach (var item in Model.Services)
                    {
                        <a class="btn btn-link" href="/hizmetlerimiz/@item.Slug">@item.Name</a>
                    }
                </div>
                <div class="col-lg-3 col-md-6">
                    <h4 class="text-light mb-4">Hızlı Linkler</h4>
                    <a class="btn btn-link" href="">Anasayfa</a>
                    <a class="btn btn-link" href="@Url.Action("about")">Hakkımızda</a>
                    <a class="btn btn-link" href="@Url.Action("courierApplicationForm")">Kurye Başvuru</a>
                    <a class="btn btn-link" href="@Url.Action("restaurantApplicationForm")">Restoran Başvuru</a>
                    <a class="btn btn-link" href="@Url.Action("services")">Hizmetlerimiz</a>
                    <a class="btn btn-link" href="@Url.Action("contact")">İletişim</a>
                </div>
                <div class="col-lg-3 col-md-6">
                </div>
            </div>
        </div>
        <div class="container">
            <div class="copyright">
                <div class="row">
                    <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                        &copy; <a class="border-bottom" href="#">Storm Ekspress</a>, Tüm hakları saklıdır.</br>
                        </br>Developer By <a class="border-bottom" href="https://instagram.com/eerolakdogan" target="_blank">LoreDesign</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square scroll-top"><i class="bi bi-arrow-up"></i></a>
    <!-- JavaScript Dosyalarını Optimize Etme -->
    <script>
        // loadScript fonksiyonunu tanımlıyoruz
        const loadScript = (src, options = {}) => {
          const script = document.createElement('script');
          script.src = src;
          script.defer = true;
          if (options.integrity) {
            script.integrity = options.integrity;
            script.crossOrigin = "anonymous";
          }
          return new Promise((resolve, reject) => {
            script.onload = resolve;
            script.onerror = reject;
            document.body.appendChild(script);
          });
        };

        // Async/Await kullanarak bağımlılıkları sırayla yükleyen fonksiyon
        window.addEventListener('DOMContentLoaded', async () => {
          try {
            // 1. TEMEL BAĞIMLILIKLAR
            await Promise.all([
              loadScript('https://code.jquery.com/jquery-3.6.4.min.js', {
                integrity: 'sha256-oP6HI9z1XaZNBrJURtCoUT5SUnxFr8s3BzRl+cbzUq8='
              }),
              loadScript('https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js', {
                integrity: 'sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8'
              })
            ]);

            // 2. WOW.JS'İ ÖNCELİKLİ YÜKLE
            try {
              await Promise.all([
                loadScript('https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js'),
                loadScript('/assets/lib/wow/wow.js')
              ]);
            } catch (e) {
              // WOW.js yüklemesinde hata alınırsa buraya düşer
              console.warn("WOW.js yüklemesinde hata:", e);
            }

            // 3. WOW.JS BAŞLATMA
            if (typeof WOW === 'function') {
              new WOW({ mobile: false }).init();
            }

            // 4. DİĞER BAĞIMLILIKLAR
            await Promise.all([
              loadScript('https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.2.1/owl.carousel.min.js'),
              loadScript('/assets/js/main.js')
            ]);

            // 5. SAYFAYA ÖZEL AYARLAR
            if (document.querySelector('[data-toggle="counter-up"]')) {
              await Promise.all([
                loadScript('https://cdn.jsdelivr.net/npm/jquery.easing@1.4.1/jquery.easing.min.js'),
                loadScript('https://cdnjs.cloudflare.com/ajax/libs/waypoints/4.0.1/jquery.waypoints.min.js'),
                loadScript('https://cdn.jsdelivr.net/npm/jquery.counterup@2.1.0/jquery.counterup.min.js')
              ]);
              $('[data-toggle="counter-up"]').counterUp({ delay: 10, time: 2000 });
            }

            // 6. Carousel Ayarları
            $(".header-carousel").owlCarousel({
              autoplay: false,
              smartSpeed: 1500,
              items: 1,
              dots: false,
              loop: true,
              nav: true,
              navText: [
                '<i class="bi bi-chevron-left"></i>',
                '<i class="bi bi-chevron-right"></i>'
              ]
            });

            $(".testimonial-carousel").owlCarousel({
              autoplay: false,
              smartSpeed: 1000,
              center: true,
              dots: true,
              loop: true,
              responsive: {
                0: { items: 1 },
                768: { items: 2 },
                992: { items: 3 }
              }
            });
          } catch (error) {
            console.error('Script yüklemesinde hata oluştu:', error);
          }
        });
    </script>

    @RenderSection("Scripts", required: false) <!-- Burada Scripts section'ı render edilmesi sağlanır -->
</body>
</html>